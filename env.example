CURSOR_API_KEY=your_cursor_api_key
GITHUB_TOKEN=your_github_token_with_repo_scope

# Optional: CI / GitHub Actions wait + auto-fix loop after PR submission
# CI_FIX_MAX_ATTEMPTS=2
# CI_WAIT_TIMEOUT_SECONDS=1800
# CI_WAIT_POLL_SECONDS=15
# CI_ACCEPTABLE_CONCLUSIONS=success,skipped,neutral
# CI_MAX_LOG_BYTES=5000000
# CI_MAX_LOG_CHARS=30000

# Optional: choose how to run cursor-agent ("docker" or "cli"). Default is "docker".
# CURSOR_RUNNER=cli
# Optional: cursor-agent binary when using CURSOR_RUNNER=cli.
# CURSOR_CLI_BIN=cursor-agent
# Optional: workspace root passed to cursor-agent when using CURSOR_RUNNER=cli.
# CURSOR_WORKSPACE_ROOT=/absolute/path

# Optional: Docker image when using CURSOR_RUNNER=docker.
# CURSOR_IMAGE=leonpatmore2/cursor-agent:latest
